


<header>
	<div class="topbar">
		<div class="fill">
			<div class="container">
				<a class="brand" href="#">The College Project</a>
				
				<ul class="nav">
					<% if signed_in_user? %>


				
		
						<li><%= link_to "User Home", current_user %>
						<li><%= link_to current_user.userprofile.name.possessive + " Profile", current_user.userprofile %></li>
						<li><%= link_to "User Listing", users_path %></li>
						<li class="dropdown" data-dropdown="dropdown">
							<a href="#" class="dropdown-toggle">CBOs</a>
							<ul class="dropdown-menu">
								
								<% current_user.cbos.each do |cbo| %>
								<li><%= link_to cbo.cboprofile.name, cbo.cboprofile %></li>
								<% end %>
								<li><%= link_to "My CBOs", my_cbos_path %></li>
								
								<li class="divider"></li>
								
								
								<li><%= link_to "Nearby CBOS", nearby_cbos_path %></li>
								<li class="divider"></li>
								<li><%= link_to "All CBOS", cbos_path %></li>
							</ul>
						</li>
						<li class="dropdown" data-dropdown="dropdown">
							<a href="#" class="dropdown-toggle">Communities</a>
							<ul class="dropdown-menu">
								
								<% current_user.communities.each do |community| %>
								<li><%= link_to community.name, community %></li>
								<% end %>
								<li><%= link_to "My Communities", my_communities_path %></li>
				
								<li class="divider"></li>
								
								<li><%= link_to "Nearby Communities", nearby_communities_path %></li>
								
								<li class="divider"></li>
								
								<li><%= link_to "All Communities", communities_path %></li>
							</ul>
						</li>
								
												
						<li><%= link_to "Sign Out", signout_path %></li>		
	
		
					<% elsif signed_in_cbo? %>
	
						<li><%= link_to "CBO Home", current_cbo %>
						<li><%= link_to current_cbo.name.possessive + " Organization Profile", current_cbo.cboprofile %></li>
						<li><%= link_to "CBO Listing", cbos_path %></li>
						<li class="dropdown" data-dropdown="dropdown">
							<a href="#" class="dropdown-toggle">Communities</a>
							<ul class="dropdown-menu">
								
								<% current_cbo.communities.each do |community| %>
								<li><%= link_to community.name, community %></li>
								<% end %>
								<li><%= link_to "My Communities", my_communities_path %></li>

								<li class="divider"></li>
								
								<li><%= link_to "Nearby Communities", nearby_communities_path %></li>
								<li class="divider"></li>
								<li><%= link_to "All Communities", communities_path %></li>
							</ul>
						</li>						
						
						
						<li><%= link_to "Sign Out", signout_path %></li>
			
					<% else %>
		
			
						<li><%= link_to "Sign In", signin_path %></li>
						<li><%= link_to "New User", signup_path %></li>
						<li><%= link_to "New CBO", new_cbo_path %>
						<li><%= link_to "CBO Listing", cbos_path %></li>
						<li><%= link_to "Communities", communities_path %></li>
						
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</header>
