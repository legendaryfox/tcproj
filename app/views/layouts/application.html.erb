<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<% if signed_in_user?%>
			
			Hello, <%= link_to current_user.name, current_user %>.
			<ul>
				<li><%= link_to "My Info", current_user %></li>
				<li><%= link_to "Sign Out", signout_path %></li>
				<li><%= link_to "User Listing", users_path %></li>
				<li><%= link_to "CBO Listing", cbos_path %></li>
			</ul>
		<% elsif signed_in_cbo? %>
			Hello, are you <%= link_to current_cbo.name, current_cbo %>
			<ul>
				<li><%= link_to "Sign Out", signout_path %></li>
			</ul>
		<% else %>
			Hello, you are not signed in.
			<ul>
				<li><%= link_to "Sign In", signin_path %></li>
				<li><%= link_to "New User", signup_path %></li>
			</ul>
			
		<% end %>
		
		<br /><br />
		
		<hr />
		
		<%= yield %>
		<%= debug(params) if Rails.env.development? %>
	</body>
</html>
