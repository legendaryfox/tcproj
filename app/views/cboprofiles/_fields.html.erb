<fieldset>
	<legend>Profile Information</legend>
	<div class="clearfix">
		<%= cboprofile_form.label :name, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :name, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label :description, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :description, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label :category, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.select(:category_id, Category.all.collect {|category| [category.name, category.id] }, :prompt => true)%>
		</div>
	</div>
	

	
	<div class="clearfix">
		<%= cboprofile_form.label :phone, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :phone, :class => "xlarge" %>
		</div>
	</div>
	
	
	<div class="clearfix">
		<%= cboprofile_form.label :website, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :website, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label "Photo", :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.file_field :cbo_avatar, :class => "xlarge" %>
			<p class="help-block">Must be an image file, and smaller than 5MB.</p>
		</div>
	
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label "Use Default Image?", :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.check_box :use_default_image, :checked => 'unchecked', :class => "inline checkbox" %>
			<span class="help-inline">Check this if you want to use the default image.</span>
		</div>
	</div>
	
	
	<div class="clearfix">
		<%= cboprofile_form.label :street1, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :street1, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label :street2, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :street2, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label :city, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :city, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label :state, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :state, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label :zip, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :zip, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label :country, :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_field :country, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label "Location Notes", :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_area :location_notes, :class => "xlarge" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= cboprofile_form.label "Information", :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_area :information, :class => "xxlarge" %>
		</div>
	</div>
	
	
	
	<div class="clearfix">
		<%= cboprofile_form.label "How to Volunteer", :class => "xlInput" %>
		<div class="input">
			<%= cboprofile_form.text_area :how_to_volunteer, :class => "xxlarge" %>
		</div>
	</div>
	
	
	
