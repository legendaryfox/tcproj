<div class="page-header">
	<h1><%= @cboprofile.name %> <small><%= communities_tagline(@cboprofile.cbo) %></small></h1>
	
	<%= render 'cbos/user_membership', :cbo => @cboprofile.cbo %>
	
</div>

<center><%= image_tag "900x250.gif" %></center>
<br />



<% if signed_in_cbo? %>
	<% if @cboprofile.id == current_cbo.id %>
		<p><%= link_to "Edit Profile", edit_cboprofile_path(current_cbo.cboprofile) %></p>
	<% end %>
<% end %>

<div class="row">
	<div class="span6">
		<h2>Location</h2>
		<p><%= google_map_static_image_for(@cboprofile, 320, 200) %></p>
		<address>
			<strong><%= @cboprofile.name %></strong><br />
			<%= profile_address_formatted(@cboprofile) %><br />
			<%= mail_to @cboprofile.cbo.email %>
		</address>
		<h3>Location Notes</h3>
		<%= simple_format(@cboprofile.location_notes) %>
		
	</div>
	
	<div class="span10" style="border-left: 1px solid #eee; margin-left: 0; padding-left: 19px">
		<h2>Description</h2>
		<%= simple_format(@cboprofile.description) %>
		
		<h2>Information</h2>
		<%= simple_format(@cboprofile.information) %>
		
		
		
		<% if signed_in_user? %>
		<p>
			<%= render 'cbos/user_membership', :cbo => @cboprofile.cbo %>
		</p>
		<% end %>
		
	</div>
</div>

<br />

<div class="row">
	<div class="span16">
		<h2>How to Volunteer</h2>
		<%= simple_format(@cboprofile.how_to_volunteer) %>
		
		
		
	</div>
</div>
		
<br />		

<h2>Volunteer Opportunities</h2>
<p>Here are some ways you can volunteer for us.</p>
<div class="row">
	<div class="span12 offset2">
		<table>
			<thead>
				<tr>
					<th>Opportunity Name</th>
					<th>Start</th>
					<th>End</th>
					<th>Notes</th>
				<tr>
			<thead>
			<tbody>
				<% @opportunities.each do |opportunity| %>
				<tr>
					<td><%= link_to opportunity.name, opportunity %></td>
					<td><%= opportunity.start_date %></td>
					<td><%= opportunity.end_date %></td>
					<td><%= opportunity.description %></td>
				</tr>
				<% end %>
				
			</tbody>
		</table>
					
	</div>
</div>





