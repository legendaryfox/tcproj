<div class="page-header">
	<h1><%= @cboprofile.name %> <small><%= communities_tagline(@cboprofile.cbo) %></small></h1>
	
	
</div>

<center><%= image_tag "900x250.gif" %></center>
<br />



<% if signed_in_cbo? %>
	<% if @cboprofile.id == current_cbo.cboprofile.id %>
		<p><%= link_to "Edit Profile", edit_cboprofile_path(current_cbo.cboprofile) %></p>
	<% end %>
<% end %>

<div class="row">
	<div class="span6">
		<h2>Location</h2>
		<p><%= google_map_static_image_for(@cboprofile, 320, 200) %></p>
		<address>
			<strong><%= @cboprofile.name %></strong><br />
			<%= profile_address_formatted(@cboprofile) %><br />
			<%= mail_to @cboprofile.cbo.email %>
		</address>
		<h3>Location Notes</h3>
		<%= simple_format(@cboprofile.location_notes) %>
		
	</div>
	
	<div class="span10" style="border-left: 1px solid #eee; margin-left: 0; padding-left: 19px">
		<h2>Description</h2>
		<%= simple_format(@cboprofile.description) %>
		
		<h2>Information</h2>
		<%= simple_format(@cboprofile.information) %>
		<%= link_to "Questionnaire", @cboprofile.cbo.questionnaire %>
		<%= link_to "Respond to Questionnaire", reply_questionnaire_path(@cboprofile.cbo.questionnaire) %>
		
		
		<!-- BEGIN QUESTIONNAIRE MODAL !-->
		<% if signed_in_user? %>
		<p>
			<div id="questionnaire-modal" class="modal hide fade" style="overflow-y:auto; max-height: 90%; margin-top:-45%;">
				<div class="modal-header">
					<a href="#" class="close">&times;</a>
					<h3>Questionnaire Heading</h3>
				</div>
				<div class="modal-body">
					
					
					<%= render 'questionnaires/modal_reply', :questionnaire => @cboprofile.cbo.questionnaire, :qresponse => Qresponse.new(:questionnaire_id => @cboprofile.cbo.questionnaire.id) %>
					
					<p>This is where questions go!</p>
					
					
				</div>
				<div class="modal-footer">
					<a href="#" class="btn primary">Primary Action</a>
					<a href="#" class="btn secondary">Secondary Action</a>
				</div>
			</div>
			
			<a class="btn" data-controls-modal="questionnaire-modal" data-backdrop="static" data-keyboard="true">View Application</a>
			
			<%= render 'cbos/user_membership', :cbo => @cboprofile.cbo %>
		</p>
		<% end %>
		<!-- END QUESTIONNAIRE/MEMBERSHIP MODAL !-->
		
	</div>
</div>

<br />

