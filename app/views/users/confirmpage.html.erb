<h1>Confirm User</h1>

<%= form_for(@user, :url => { :action => "confirm" }) do |user_form| %>
	<%= render 'shared/error_messages', :object => user_form.object %>
	<p>Please re-enter your e-mail and password to confirm your account.</p>

	
	<fieldset>
		<legend>Login Information</legend>
		<div class="clearfix">
			<%= user_form.label :email, :class => "xlInput" %>
			<div class="input">
				<%= user_form.text_field :email, :class => "xlarge" %>
			</div>
		</div>
		
		<div class="clearfix">
			<%= user_form.label :password, :class => "xlInput" %>
			<div class="input">
				<%= user_form.password_field :password, :class => "xlarge" %>
			</div>
		</div>
	
		<div class="actions">
			<%= user_form.submit "Confirm", :class => "btn primary"  %>
		</div>
	</fieldset>
	
<% end %>